[Unit]
Description=Mission Control File Watcher
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/andrew/claudeclaw/mission-control
ExecStart=/home/andrew/.nvm/versions/node/v20.20.0/bin/npx tsx scripts/watcher.ts
Restart=on-failure
RestartSec=5
Environment=NODE_ENV=production
Environment=NODE_OPTIONS=--no-network-family-autoselection

[Install]
WantedBy=default.target
